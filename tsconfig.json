{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["./*"],
      "@modules/*": ["modules/*"],
      "@prisma1/*": ["prisma/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["src/scripts", "./bin"]
}
