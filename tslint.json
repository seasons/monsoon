{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "max-classes-per-file": [true, 1],
    "no-shadowed-variable": false,
    "no-unused-variable": [true, { "ignore-pattern": "^_" }]
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
