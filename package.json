{
  "name": "monsoon",
  "version": "0.1.0",
  "author": "Luc Succes <l2succes@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": "10.x.x"
  },
  "resolutions": {
    "graphql": "^14.5.7"
  },
  "scripts": {
    "start-sls": "serverless offline",
    "debug-sls": "export SLS_DEBUG=* && node --inspect ./node_modules/.bin/serverless offline -s dev",
    "build-sls": "serverless package",
    "deploy-sls": "serverless deploy",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "postinstall": "yarn build-ts",
    "start": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "debug": "dotenv -- nodemon -e ts,graphql -x node --inspect -r dotenv/config -r ts-node/register src/index.ts",
    "build": "rimraf dist && tsc",
    "update-mist-schema": "get-graphql-schema https://mist-staging.herokuapp.com/graphql > ./src/mist/mist.graphql"
  },
  "dependencies": {
    "airtable": "^0.7.1",
    "apollo-datasource-rest": "^0.6.4",
    "apollo-link-http": "^1.5.15",
    "apollo-server": "^2.9.3",
    "apollo-server-lambda": "^2.9.3",
    "bcryptjs": "2.4.3",
    "dotenv": "^8.1.0",
    "faker": "^4.1.0",
    "graphql": "^14.5.7",
    "graphql-import": "^0.7.1",
    "graphql-tools": "^4.0.5",
    "jsonwebtoken": "8.5.1",
    "lodash": "^4.17.15",
    "postgraphile": "^4.4.3",
    "postgraphile-apollo-server": "^0.1.1",
    "prisma": "1.34.8",
    "prisma-binding": "^2.3.16",
    "prisma-client-lib": "^1.34.8",
    "slugify": "^1.3.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/node": "10.14.17",
    "dotenv-cli": "1.4.0",
    "graceful-fs": "^4.2.2",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "rimraf": "2.7.1",
    "serverless": "^1.51.0",
    "serverless-dotenv-plugin": "^2.1.1",
    "serverless-offline": "^5.10.1",
    "serverless-plugin-include-dependencies": "^3.2.1",
    "serverless-plugin-typescript": "^1.1.7",
    "ts-node": "^8.4.1",
    "typescript": "3.2.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
